# SMTP-Tunnel Client - Docker Image
FROM golang:1.21-alpine AS builder

WORKDIR /build
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN go build -ldflags="-s -w" -o /build/bin/smtp-tunnel-client ./cmd/client

FROM alpine:3.19
RUN apk add --no-cache ca-certificates tzdata

COPY --from=builder /build/bin/smtp-tunnel-client /usr/local/bin/
COPY scripts/docker-entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

EXPOSE 1080
ENTRYPOINT ["/entrypoint.sh"]
